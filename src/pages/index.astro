---
import About from "../components/About.astro";
import Education from "../components/Education.astro";
import Experience from "../components/Experience.astro";
import Hero from "../components/Hero/Index.astro";
import Layout from "../layouts/Base.astro";
// import Project from "../components/Project.astro";
import Skill from "../components/Skill.astro";
import data from "../data/cv_esp.ts";
---

<Layout title={`${data.name} | ${data.about}`}>
    <main
        class="container relative mx-auto scroll-my-12 overflow-auto p-4 print:p-12 md:p-16"
    >
        <section class="mx-auto w-full max-w-2xl space-y-8 print:space-y-6">
            <Hero data={data} />
            {data.sumary ?? <About sumary={data.sumary} />}
            {data.experiences ?? <Experience experiences={data.experiences} />}
            {data.educations ?? <Education educations={data.educations} />}
            <!-- <Project /> -->
            {data.skills ?? <Skill skills={data.skills} />}
        </section>
    </main>
</Layout>
