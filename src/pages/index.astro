---
import About from "../components/About.astro";
import Construction from "../components/Construction.astro";
import Experience from "../components/Experience.astro";
import Hero from "../components/Hero/Index.astro";
import Layout from "../layouts/Base.astro";
import data from "../data/cv_esp.json";
// import Education from "../components/cv/Education.astro";
---

<Layout title={`${data.name} | ${data.about}`}>
    <main
        class="container relative mx-auto scroll-my-12 overflow-auto p-4 print:p-12 md:p-16"
    >
        <section
            class="mx-auto w-full max-w-2xl space-y-8 print:space-y-6"
        >
            <Hero data={data} />
            <About sumary={data.sumary} />
            <Experience experiences={data.experiences}/>
            <!-- <Education /> -->
            <Construction />
        </section>
    </main>
</Layout>
