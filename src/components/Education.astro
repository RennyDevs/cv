---
import { education } from "../data/cv_esp.json";
---

<section class="flex min-h-0 flex-col gap-y-3">
    <h2 class="text-xl font-bold">Educaci√≥n</h2>
    {
        education.map(({ institution, area, startDate, endDate }) => {
            const startYear = new Date(startDate).getFullYear();
            const endYear =
                endDate != null ? new Date(endDate).getFullYear() : "Actual";
            return (
                <div class="rounded-lg bg-card text-card-foreground">
                    <div class="flex flex-col space-y-1.5">
                        <div class="flex items-center justify-between gap-x-2 text-base">
                            <h3 class="font-semibold leading-none">
                                {institution}
                            </h3>
                            <div class="text-sm tabular-nums text-gray-500">
                                <time
                                    datetime={startDate}
                                    data-title={startDate}
                                >
                                    {startYear}
                                </time>
                                -
                                <time datetime={endDate} data-title={endDate}>
                                    {endYear}
                                </time>
                            </div>
                        </div>
                    </div>
                    <div class="text-pretty font-mono text-sm text-muted-foreground mt-2">
                        {area}
                    </div>
                </div>
            );
        })
    }
</section>
