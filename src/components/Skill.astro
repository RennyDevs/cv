---
import type { Skill } from "../types";

interface Props {
    skills: Skill[];
}

const { skills }: Props = Astro.props;
---

<section class="flex min-h-0 flex-col gap-y-3">
    <h2 class="text-xl font-bold">Competencias</h2>
    <ul class="flex flex-wrap gap-1">
        {
            skills.map((s) => (
                <li class="inline-flex items-center rounded-md border px-2 py-0.5 text-xs font-semibold font-mono transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-nowrap border-transparent bg-black text-slate-100 hover:bg-black/70 print:text-[10px]">
                    {s.name}
                </li>
            ))
        }
    </ul>
</section>
